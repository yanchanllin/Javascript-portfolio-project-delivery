<body style="background-color:powderblue;">
<p id="notice"><%= notice %></p>
<% if flash[:message] %>
  <div class="center alert">
    <p><%= flash[:message] %></p>
  </div>
<% end %>

<div class="center">
  <div< class="info">
    <% if @user.admin %>
      <p><strong>ADMIN</strong></p>
    <% end %>
  <p><strong>User Name:</strong> <%= @user.name %></p>  
  <div style="text-align:center;">
   <h1 style="font-size:160%;color:orange;">Orders:</h1>
   
    <ol><% @user.orders.each do |order| %> 
      <li><%= order.meal.name %></br>
       quantity: <%= order.quantity %></li>
      <%= link_to 'Edit', edit_order_path(order) %>
    <% end %></ol>
      <br />
    <p><%= link_to 'Add order', new_order_path %></p>
  </div>
</div>
</div>
</body>
